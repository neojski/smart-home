{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "lib": ["es5", "es6", "dom"],
    "target": "ES2015",

    "moduleResolution": "node",
    "jsx": "react",

    "skipLibCheck": true,
  }
}
